{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "profile.schema.json",
  "title": "Dataset Profile",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "dataset", "columns"],
  "properties": {
    "version": { "type": "string", "enum": ["1"] },
    "dataset": {
      "type": "object",
      "additionalProperties": false,
      "required": ["rows", "columns"],
      "properties": {
        "rows": { "type": "integer", "minimum": 0 },
        "columns": { "type": "integer", "minimum": 0 },
        "header_present": { "type": "boolean" },
        "source_path": { "type": "string" }
      }
    },
    "columns": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "logical_type", "null_count", "non_null_count"],
        "properties": {
          "name": { "type": "string" },

          "logical_type": {
            "type": "string",
            "enum": [
              "int64", "float64", "bool", "date", "datetime", "string",
              "int",   "float",   "boolean"
            ]
          },

          "null_count": { "type": "integer", "minimum": 0 },
          "non_null_count": { "type": "integer", "minimum": 0 },
          "min": { "type": ["number", "string", "boolean", "null"] },
          "max": { "type": ["number", "string", "boolean", "null"] },
          "mean": { "type": ["number", "null"] },
          "median": { "type": ["number", "null"] },
          "stddev": { "type": ["number", "null"] },
          "quantiles": {
            "type": "object",
            "additionalProperties": { "type": "number" }
          },
          "cardinality": { "type": ["integer", "null"], "minimum": 0 },
          "topk": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["value", "count"],
              "properties": {
                "value": { "type": ["string", "number", "boolean", "null"] },
                "count": { "type": "integer", "minimum": 0 }
              }
            }
          },
          "histogram": {
            "type": ["object", "null"],
            "additionalProperties": false,
            "properties": {
              "bins": { "type": "integer", "minimum": 1 },
              "edges": {
                "type": "array",
                "items": { "type": "number" },
                "minItems": 2
              },
              "counts": {
                "type": "array",
                "items": { "type": "integer", "minimum": 0 }
              }
            }
          },
          "null_ratio": { "type": ["number", "null"], "minimum": 0, "maximum": 1 }
        }
      }
    }
  }
}
