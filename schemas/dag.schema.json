{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dag.schema.json",
  "title": "Pipeline DAG",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "nodes", "edges"],
  "properties": {
    "version": { "type": "string", "enum": ["1"] },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "label", "type", "duration_ms"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "type": { "type": "string", "enum": ["io", "parse", "analyze", "profile", "render", "other"] },
          "duration_ms": { "type": "number", "minimum": 0 },
          "rows_in": { "type": ["integer", "null"], "minimum": 0 },
          "rows_out": { "type": ["integer", "null"], "minimum": 0 },
          "bytes_in": { "type": ["integer", "null"], "minimum": 0 },
          "bytes_out": { "type": ["integer", "null"], "minimum": 0 }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["from", "to"],
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" }
        }
      }
    }
  }
}
